<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_account_ks_general_ledger" model="ir.actions.client">
            <field name="name">KS General Ledger</field>
            <field name="tag">account_report</field>
            <field name="context" eval="{'model': 'account.report.ks.general.ledger'}" />
        </record>
        <menuitem id="menu_action_account_ks_general_ledger" name="KS General Ledger" action="action_account_ks_general_ledger" parent="account_reports.account_reports_audit_reports_menu" groups="account.group_account_user"/>



        <template id="line_template_ks_general_ledger" inherit_id="account_reports.line_template" primary="True">
            <xpath expr="//ul[hasclass('o_account_reports_domain_dropdown')]/li[last()]" position="before">
                <li t-if="line['caret_options'] == 'invoice'" role="presentation" groups="account.group_account_user"><a role="menuitem" tabindex="-1" t-att-data-id="line['id']" action="open_invoices">View Invoices</a></li>
            </xpath>
        </template>
        <template id="template_ks_general_ledger" inherit_id="account_reports.main_template" primary="True">
            <xpath expr="//tbody" position="replace">
                <t t-if="lines.get('lines')">
                    <t t-call="custom_ca_reports.line_template_ks_general_ledger" />
                </t>
            </xpath>
        </template>

    </data>
</odoo>