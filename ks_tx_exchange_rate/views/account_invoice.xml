<odoo>
  <data>
    <!-- Vista Heredada Account Inovice -->
    <record id="account_invoice_form" model="ir.ui.view">
         <field name="name">KS TX ER Inovice</field>
         <field name="model">account.invoice</field>
         <field name="inherit_id" ref="account.invoice_form"/>
         <field name="arch" type="xml">
           <xpath expr="//form/sheet/group[1]/group[2]" position="inside">
             <field name="ks_tx_exchange_rate" attrs="{'readonly': ['|',('state','not in',('draft',)), ('type','!=','out_invoice')]}" />
           </xpath>
         </field>
    </record>
    <!-- Vista Heredada Account Inovice -->
    <record id="invoice_supplier_form" model="ir.ui.view">
         <field name="name">KS TX ER Suplier</field>
         <field name="model">account.invoice</field>
         <field name="inherit_id" ref="account.invoice_supplier_form"/>
         <field name="arch" type="xml">
           <field name="currency_id" position="after">
             <field name="ks_tx_exchange_rate" attrs="{'readonly': ['|',('state','not in',('draft',))]}" />
           </field>
         </field>
    </record>
  </data>
</odoo>
